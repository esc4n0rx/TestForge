    "uploadAttachment": {
      "endpoint": "POST /api/flows/cards/:cardId/attachments",
      "description": "Faz upload de anexo (imagem) para um card específico do flow",
      "contentType": "multipart/form-data",
      "auth": "Requer autenticação e permissão de modificação (OWNER/ADMIN/MEMBER)",
      "params": {
        "cardId": "number - ID do card que receberá o anexo"
      },
      "formData": {
        "file": "File (obrigatório, max: 25MB, tipos: PNG, JPG, JPEG, WEBP, GIF)"
      },
      "validations": [
        "Flow deve ter um Space vinculado (flow.spaceId não pode ser null)",
        "Usuário deve ser membro do workspace",
        "Tipo de arquivo deve ser imagem (PNG, JPG, JPEG, WEBP, GIF)",
        "Tamanho do arquivo não pode exceder 25MB",
        "Limite de evidências do workspace não pode ser excedido"
      ],
      "example": {
        "request": "FormData com campo 'file' contendo a imagem",
        "response": {
          "success": true,
          "data": {
            "attachment": {
              "id": 123,
              "cardId": 45,
              "provider": "cloudinary",
              "publicId": "forge/workspace_7/space_3/flow_38/1701234567890_abc123",
              "secureUrl": "https://res.cloudinary.com/xxx/image/upload/v123/forge/workspace_7/space_3/flow_38/1701234567890_abc123.webp",
              "originalName": "screenshot.png",
              "originalFormat": "png",
              "storedFormat": "webp",
              "bytes": 15234,
              "width": 1920,
              "height": 1080,
              "uploadedBy": 10,
              "createdAt": "2026-01-19T10:30:00.000Z",
              "spaceFileId": 789
            }
          }
        }
      },
      "frontendUsage": {
        "description": "Como fazer upload de anexo para card",
        "code": "const formData = new FormData();\nformData.append('file', selectedFile);\n\nconst response = await fetch(`/api/flows/cards/${cardId}/attachments`, {\n  method: 'POST',\n  headers: {\n    'Authorization': `Bearer ${token}`,\n    'Cookie': document.cookie\n  },\n  body: formData\n});\n\nconst data = await response.json();\nif (data.success) {\n  const attachment = data.data.attachment;\n  console.log(`Upload OK: ${attachment.secureUrl}`);\n}"
      },
      "storage": {
        "provider": "Cloudinary",
        "folder": "forge/workspace_{workspaceId}/space_{spaceId}/flow_{flowId}",
        "conversion": "Todos os arquivos são convertidos automaticamente para WebP",
        "naming": "{timestamp}_{uuid}.webp",
        "integration": "Arquivo também é salvo como SpaceFile para contagem de evidências"
      },
